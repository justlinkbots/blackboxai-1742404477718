<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude specific files & directories that contain sensitive information -->
        <exclude
            domain="root"
            path="sensitive_data"/>
        <exclude
            domain="file"
            path="temp_files"/>
    </cloud-backup>
    <device-transfer>
        <include
            domain="root"
            path="."/>
    </device-transfer>
</data-extraction-rules>